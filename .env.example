# Example Environment Configuration
# Copy this file to .env.development or .env.production and fill in the values

ENVIRONMENT=development
APP_NAME=Clean Office
API_BASE_URL=http://localhost:3000

# Firebase Emulator Settings (for development)
USE_EMULATOR=true
EMULATOR_HOST_ANDROID=10.0.2.2
EMULATOR_HOST_OTHER=127.0.0.1
EMULATOR_AUTH_PORT=9099
EMULATOR_FIRESTORE_PORT=8080
EMULATOR_STORAGE_PORT=9199

# Feature Flags
ENABLE_LOGGING=true
ENABLE_DEBUG_MODE=true
ENABLE_CRASHLYTICS=false

# App Configuration
MAX_IMAGE_SIZE_MB=5
IMAGE_QUALITY=85
ITEMS_PER_PAGE=20
