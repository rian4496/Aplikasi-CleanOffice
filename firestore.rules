rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules untuk collection users
    match /users/{userId} {
      // Allow create saat register (belum ada auth.uid di database)
      allow create: if request.auth != null && request.auth.uid == userId;

      // User bisa read/write data mereka sendiri
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;

      // Admin bisa read semua users
      allow read: if request.auth != null &&
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rules untuk collection reports
    match /reports/{reportId} {
      // Semua authenticated users bisa read
      allow read: if request.auth != null;
      
      // User bisa create report dengan userId mereka sendiri
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // User bisa update/delete report mereka sendiri
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
      
      // Admin bisa update semua reports
      allow update: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Rules untuk collection requests
    match /requests/{requestId} {
      // Semua authenticated users bisa read
      allow read: if request.auth != null;

      // User bisa create request
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;

      // Cleaner & admin bisa update
      allow update: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['cleaner', 'admin'];
    }

    // Rules untuk collection inventory
    match /inventory/{itemId} {
      // Semua authenticated users bisa read
      allow read: if request.auth != null;

      // Hanya admin yang bisa create, update, delete
      allow create, update, delete: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules untuk collection stockRequests
    match /stockRequests/{requestId} {
      // Semua authenticated users bisa read
      allow read: if request.auth != null;

      // Authenticated users bisa create stock request
      allow create: if request.auth != null;

      // Admin bisa update/approve/reject
      allow update: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules untuk collection stockHistory
    match /stockHistory/{historyId} {
      // Semua authenticated users bisa read
      allow read: if request.auth != null;

      // Hanya system (via backend) yang bisa create - dicatat otomatis
      allow create: if request.auth != null;

      // Tidak ada yang bisa update/delete history
      allow update, delete: if false;
    }

    // Rules untuk collection notifications
    match /notifications/{notificationId} {
      // User hanya bisa read notifikasi mereka sendiri
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;

      // System/Admin bisa create notifications
      allow create: if request.auth != null;

      // User bisa update (mark as read) notifikasi mereka sendiri
      allow update: if request.auth != null &&
                       resource.data.userId == request.auth.uid;

      // Admin bisa delete
      allow delete: if request.auth != null &&
                       exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}